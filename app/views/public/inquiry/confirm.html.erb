<div class="page-header">
  <h1 class="offset-md-3">お問い合わせ</h1>
</div>

<%= form_with model: @inquiry, url: inquiry_thanks_path, local: true do |f| %>
  <table class="table">
    <tr>
      <th class="text-center">名前</th>
      <td class= "col-sm-6">
        <%= f.hidden_field :name %>
        <%= @inquiry.name %>
      </td>
    </tr>
    <tr>
      <th class="text-center">メールアドレス</th>
      <td class= "col-sm-6">
        <%= f.hidden_field :email %>
        <%= @inquiry.email %>
      </td>
    </tr>
    <tr>
      <th class="text-center">お問い合わせ内容</th>
      <td class= "col-sm-6">
        <%= f.hidden_field :message %>
        <%= simple_format(@inquiry.message) %>
      </td>
    </tr>
  </table>
  <%= f.submit '送信', :class => 'btn btn-primary col-2 offset-md-4' %>
<% end %>