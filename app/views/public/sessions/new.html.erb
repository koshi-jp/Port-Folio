<div class="container">
  <div class="row">
    <div class="col col-7 offset-md-2 text-center">
      <%= flash[:alert]%>
        <h2>ログイン</h2>

        <%= form_with model: @member, url: member_session_path, local: true do |f| %>
          <form>
            <div class="form-group">
              <%= f.label :"メールアドレス" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", style:"width: 100%;" %>
            </div>

            <div class="form-group">
              <%= f.label "パスワード" %><br />
              <%= f.password_field :password, autocomplete: "current-password", style:"width: 100%;" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "ログイン", class: "btn btn-primary", style:"width: 100%;" %>
            </div>
          </form>
        <% end %>
    </div>
  </div>
</div>