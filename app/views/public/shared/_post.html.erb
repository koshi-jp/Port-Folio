<div class="d-flex p-1 bd-highlight index">

    <%= link_to attachment_image_tag(post, :image, :fill, 250, 270),post_path(post) %>

   <div class="card" style="width: 100%;">
     <div class="card-header text-white">
       <%= post.member.nickname %>さんの投稿
     </div>

   <ul class="list-group list-group-flush">
      <li class="list-group-item">
        投稿日時：<%= post.created_at.to_s(:datetime_jp) %>
      </li>

      <li class="list-group-item">タイトル：<%= post.title.truncate(20) %></li>
      <li class="list-group-item">タグ:<%= render 'public/shared/tag_list', tag_list: post.tag_list %></li>

        <% if post.favorited_by?(current_member) %>
          <li class="list-group-item">
            <%= link_to post_favorites_path(post),class: "favorite",  method: :delete do %>♥<%= post.favorites.count %>いいね
            <%= "　　" %>
            <%= link_to "#{post.post_comments.count} コメント", post_path(post.id),class: "favorite" %>
          </li>
            <% end %>
        <% else %>
          <li class="list-group-item">
            <%= link_to post_favorites_path(post),class: "favorite",  method: :post do %>♡<%= post.favorites.count %> いいね<%= "　　" %>
            <%= link_to "#{post.post_comments.count} コメント", post_path(post.id),class: "favorite" %>
          </li>
            <% end %>
        <% end %>

        <li class="list-group-item">本文：<%= post.body.truncate(107) %></li>
      </ul>
    </div>
</div>