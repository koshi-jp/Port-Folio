<div class='container px-5 px-sm-0'>
  <div class='row'>

  <div class='col col-md-3'>
    <%= render 'public/shared/info', member: @member %>
  </div>

  <div class='col-md-8 offset-md-1'>
     <% @posts.each do |post| %>
  <div class="d-flex p-2 bd-highlight">

    <div class="d-flex flex-column bd-highlight mb-4">
      <a>
        投稿日時：<%= post.created_at.to_s(:datetime_jp) %>
      </a>
      <a>タイトル：<%= post.title %></a>

      <a><%= render 'tag_list', tag_list: post.tag_list %></a>

      <a>本文：<%= post.body %></a><br>

      <a><%= attachment_image_tag post, :image, :fill, 300, 300 %></a>

     <div class="post-info">
        <% if post.favorited_by?(current_member) %>
          <a>
            <%= link_to post_favorites_path(post), method: :delete do %>
              ♥<%= post.favorites.count %> いいね
            <% end %>
          </a>
          <% else %>
          <a>
            <%= link_to post_favorites_path(post), method: :post do %>
              ♡<%= post.favorites.count %> いいね
            <% end %>
          </a>
        <% end %>
        <a><%=  "　" %></a>
        <a><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></a>
    </div>
    </div>
  </div>
  <% end %>

    <div class="comments">
    <p>コメント件数：<%= @post.post_comments.count %></p>
      <% @post.post_comments.each do |post_comment| %>
      <p>
        <%= attachment_image_tag post_comment.member, :image, :fill, 40, 40 %>
        <%= post_comment.member.nickname %>
        <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
      </p>
        <% if post_comment.member == current_member %>
        <div class="comment-delete">
          <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete %>
        </div>
        <% end %>
      <% end %>
    </div>

    <div class="form-group-comment ">
      <%= form_with(model:[@post, @post_comment], local: true) do |f| %>
        <%= f.text_area :comment, rows:'2', placeholder: "コメントをここに" %><br>
        <%= f.submit "送信する" %>
      <% end %>
    </div>
  </div>



 </div>
</div>