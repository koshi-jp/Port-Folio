  <div class='container'>
    <div class='row'>
      <div class='col col-md-3'>
        <%= render 'public/shared/info', member: @member %>
      </div>

      <div class='col col-md-8 offset-md-1'>
        <div class="d-flex flex-column bd-highlight h5">
          <a>投稿日時：<%= @post.created_at.to_s(:datetime_jp) %></a>
          <a>タイトル：<%= @post.title %></a>
          <a>タグ：<%= render 'tag_list', tag_list: @post.tag_list %></a>
        </div>

      <div class="card" style="col-8 width: auto;">
        <a class="card-img-top"><%= attachment_image_tag @post, :image %></a>
        <div class="card-body bg-light">
          <div class="card-text h4"><%= @post.body %></div>
        </div>
      </div>


      <div class="post-info">
        <% if @post.favorited_by?(current_member) %>
          <a><%= link_to post_favorites_path(@post), method: :delete do %>♥<%= @post.favorites.count %> いいね
             <% end %>
          </a>
        <% else %>
            <a>
              <%= link_to post_favorites_path(@post), method: :post do %>♡<%= @post.favorites.count %> いいね
              <% end %>
            </a>
        <% end %>
          <a><%=  "  " %></a>
          <a><%= link_to "#{@post.post_comments.count} コメント", post_path(@post.id) %></a>
          <a><%=  "  " %></a>
          <% if @post.member == current_member %>
          <a class="d-grid justify-content-md-end">
            <%= link_to "投稿を削除する", post_path(@post.id), method: :delete, class: 'btn btn-danger ', "data-confirm" => "本当に削除しますか？" %>
          <% end %>
          </a>
      </div>

      <div class="comments">
        <% @post.post_comments.each do |post_comment| %>
        <p>
          <%= attachment_image_tag post_comment.member, :image, :fill, 40, 40 %>
          <%= post_comment.member.nickname %>
          <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
        </p>
      </div>
       <% end %>
      <form>
        <div class="form-group-comment ">
          <%= form_with(model:[@post, @post_comment], local: true) do |f| %>
            <%= f.text_area :comment, rows:'3', placeholder: "コメントをここに" %>
            <%= f.submit "送信する" %>
          <% end %>
        </div>
      </form>
    </div>
  </div>